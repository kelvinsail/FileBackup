<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/base_padding_large"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_ckeck_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_setting_group_title"
        android:gravity="center_vertical|left"
        android:paddingBottom="@dimen/base_padding_normal"
        android:textColor="@color/text_black"
        android:textSize="@dimen/base_text_middle"
        android:textStyle="italic"
        tools:text="Text"/>

    <RadioGroup
        android:id="@+id/rg_content_ckeck_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RadioGroup>

</LinearLayout>
