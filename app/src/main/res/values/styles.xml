<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="item_click_background">@drawable/background_item_white2gray</item>
        <item name="item_click_background_transparent">@drawable/background_item_trans2gray</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <style name="Button">
        <item name="android:textSize">@dimen/base_text_middle</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.FunctionBar">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:background">@drawable/background_button_click_primary2dark</item>
    </style>

</resources>
